<section class="form-auth text-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "Email address" %>
  <label for="inputPassword" class="sr-only">Password</label>
 <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control", id: "inputPassword", placeholder: "Password" %>
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button class="btn btn-sm btn-primary btn-block" type="submit">Sign in</button>
  <p class="mt-5 mb-3 text-muted">Finderapp</p>
 <% end %>

 <%= render "devise/shared/links" %>
</section>
<style>

.form-control {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-control .checkbox {
  font-weight: 400;
}
.form-control .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-control .form-control:focus {
  z-index: 2;
}
.form-control input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-control input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

</style>

